@model IEnumerable<VacationsPortal.ViewModels.TravelRequestViewModel>

@{
    ViewBag.Title = "Travel Requests";
}

<h2>Travel Requests @DateTime.Now.Year </h2>
<style>
    div.dt-buttons {
        float: right;
        margin-left: 10px;
    }
</style>
<table class="mdl-data-table" id="tb">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCanceled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Routes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisaStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRLetterStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightCostCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightCost2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightCost2Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReissueCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReissueCost2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReissueCost3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightRefund)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelCostCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequesterNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationsNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Hotel", "../TRHotelInfos/Details/" + item.Id) |
                    @Html.ActionLink("Visa", "../Visas/Details/" + item.Id)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @if (item.StartDate != null)
                    {
                        @item.StartDate.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @if (item.EndDate != null)
                    {
                        @item.EndDate.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingDays)
                </td>
                <td>
                    @if (item.ModifiedOn != null)
                    {
                        @item.ModifiedOn.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @if (item.IsCanceled != null)
                    {
                        if ((bool)item.IsCanceled)
                        {
                            @Html.Raw("YES")
                        }
                        else
                        {
                            @Html.Raw("NO")
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Routes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TRStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisaStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRLetterStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightCostCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightCost2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightCost2Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReissueCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReissueCost2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReissueCost3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightRefund)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelCostCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequesterNotes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperationsNotes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TripType)
                </td>
            </tr>
        }
    </tbody>
</table>

@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css">
}

@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $("#tb").DataTable({
                dom: 'lBfrtip',
                buttons: [
                    'excel'
                ],
                columnDefs: [
                    {
                        className: 'mdl-data-table__cell--non-numeric'
                    }
                ],
                fixedHeader: true,
                "order": [[1, "desc"]]
            });
        });
    </script>

}


