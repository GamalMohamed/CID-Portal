@model IEnumerable<VacationsPortal.Models.TRHotelInfo>

@{
    ViewBag.Title = "Hotels";
}

<h2>Hotels @DateTime.Now.Year</h2>

<table class="mdl-data-table" id="tb">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TravelRequest.TRID)
            </th>
            <th>
                @Html.DisplayName("Country Name")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Hotel Rate")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayName("Payment Method")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TravelRequest.TRID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @if (item.TravelRequest.Trips.Count > 0)
                {
                    @Html.DisplayFor(modelItem => item.TravelRequest.Trips.ToList()[0].Employee.contact.FullName)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.MethodName)
            </td>
            <td>
                @item.CheckInDate.ToShortDateString()
            </td>
            <td>
                @item.CheckOutDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>

        }
    </tbody>
</table>




@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css">
}

@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $("#tb").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excel'
                ],
                columnDefs: [
                    {
                        className: 'mdl-data-table__cell--non-numeric'
                    }
                ],
                fixedHeader: true,
                "order": [[0, "desc"]]
            });
        });
    </script>

}



